<?xml version="1.0"?>
<!--
    Transforms launch file
-->

<launch>

    <!-- Launch file arguments -->
    <arg name="xavier" default="false"/>
    <arg name="svea_number" default="7"/>

    <!-- Xavier configuration -->
    <group if="$(arg xavier)">
        <node pkg="tf2_ros" type="static_transform_publisher" name="imulink_broadcaster"    args="0.12 0.055 0.1 0 0 0 1 base_link imu" />
        <node pkg="tf2_ros" type="static_transform_publisher" name="lidarlink_broadcaster"  args="0.301 0 0.2 0 0 0 1 base_link laser" />
        <!-- TODO place T265 on Xavier SVEA and meaure transform -->
        <node pkg="tf2_ros" type="static_transform_publisher" name="t265_link_broadcaster"  args="0.09 0 0.215 0 -1.57 3.14 base_link t265_camera_pose_frame" />
        <node pkg="tf2_ros" type="static_transform_publisher" name="t265_odom_broadcaster"  args="0.09 0 0.215 0 -1.57 3.14 odom t265_camera_odom_frame" />
        <node pkg="tf2_ros" type="static_transform_publisher" name="gps_broadcaster"        args="0 0 0.19 0 0 0 base_link gps" />
    </group>

    <!-- TX2 configuration -->
    <group unless="$(arg xavier)">
        <arg name="base_link" value="svea_$(arg svea_number)_base_link" />
        <arg name="odom" value="svea_$(arg svea_number)_odom" />
        <arg name="gps" value="svea_$(arg svea_number)_gps" />
        <node pkg="tf2_ros" type="static_transform_publisher" name="linkodom_broadcaster"   args="0 0 0 0 0 0 1 $(arg odom) $(arg base_link)" />
        <node pkg="tf2_ros" type="static_transform_publisher" name="odommap_broadcaster"    args="0 0 0 0 0 0 1 map $(arg odom)" />
        <node pkg="tf2_ros" type="static_transform_publisher" name="imulink_broadcaster"    args="0.17 0.074 0.2 0 0 0 1 $(arg base_link) imu" />
        <node pkg="tf2_ros" type="static_transform_publisher" name="lidarlink_broadcaster"  args="0.284 0 0.2 0 0 0 1 $(arg base_link) laser" />
        <node pkg="tf2_ros" type="static_transform_publisher" name="t265_link_broadcaster"  args="0.09 0 0.215 0 -1.57 3.14 $(arg base_link) t265_camera_pose_frame" />
        <node pkg="tf2_ros" type="static_transform_publisher" name="t265_odom_broadcaster"  args="0.09 0 0.215 0 -1.57 3.14 $(arg odom) t265_camera_odom_frame" />
        <node pkg="tf2_ros" type="static_transform_publisher" name="gps_broadcaster"        args="0.215 0 0.215 0 0 0 $(arg base_link) $(arg gps)" />
        <node pkg="tf2_ros" type="static_transform_publisher" name="web_cam"                args="0.07 0 0.300 -1.57 0 -1.57 $(arg base_link) camera" />
    </group>

</launch>
