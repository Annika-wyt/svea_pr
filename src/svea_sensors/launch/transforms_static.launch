<?xml version="1.0"?>
<!--
    Transforms launch file
-->

<launch>

    <!-- Launch file arguments -->
    <arg name="xavier" default="false"/>
    <arg name="svea_number" default="2"/>
    <arg name="initial_pose_x" default="0"/>
    <arg name="initial_pose_y" default="0"/>
    <arg name="initial_pose_a" default="0"/>

    <!-- Xavier configuration -->
    <group if="$(arg xavier)">
        <node pkg="tf2_ros" type="static_transform_publisher" name="imulink_broadcaster"    args="0.12 0.055 0.1 0 0 0 1 base_link imu" />
        <node pkg="tf2_ros" type="static_transform_publisher" name="lidarlink_broadcaster"  args="0.301 0 0.2 0 0 0 1 base_link laser" />
        <!-- TODO place T265 on Xavier SVEA and meaure transform -->
        <node pkg="tf2_ros" type="static_transform_publisher" name="t265_link_broadcaster"  args="0.09 0 0.215 0 -1.57 3.14 base_link t265_camera_pose_frame" />
        <node pkg="tf2_ros" type="static_transform_publisher" name="t265_odom_broadcaster"  args="0.09 0 0.215 0 -1.57 3.14 odom t265_camera_odom_frame" />
        <node pkg="tf2_ros" type="static_transform_publisher" name="gps_broadcaster"        args="0.125 0.086 0.215 0 0 0 base_link gps" />
    </group>

    <!-- TX2 configuration -->
    <group unless="$(arg xavier)">
        <arg name="base_link" value="svea_$(arg svea_number)_base_link" />
        <arg name="odom" value="svea_$(arg svea_number)_odom" />
        <arg name="gps" value="svea_$(arg svea_number)_gps" />
        <arg name="aruco_11" value="svea_$(arg svea_number)_aruco_11" />
        <node pkg="tf2_ros" type="static_transform_publisher" name="gpslink_broadcaster"    args="0.125 -0.086 0.215 0 0 0 base_link gps" />
        <node pkg="tf2_ros" type="static_transform_publisher" name="arucolink_broadcaster"  args="0 0.150 0.300 0 0 0 base_link $(arg aruco_11)" />
    </group>

</launch>
